{
    "name": "secretwebmaster\/wncms",
    "type": "project",
    "description": "Wncms is one of the best CMS in the world.",
    "keywords": [
        "wncms",
        "\u6587\u5c3cCMS"
    ],
    "license": "MIT",
    "require": {
        "php": "^8.2",
        "barryvdh\/laravel-debugbar": "*",
        "laravel\/framework": "^11.23",
        "laravel\/tinker": "^2.9",
        "mcamara\/laravel-localization": "*",
        "secretwebmaster\/wncms-tags": "^1.0.0",
        "spatie\/laravel-activitylog": "^4.8",
        "spatie\/laravel-medialibrary": "^11.9",
        "spatie\/laravel-permission": "^6.9",
        "secretwebmaster\/wncms-test": "^1.0.0"
    },
    "require-dev": {
        "fakerphp\/faker": "^1.23",
        "laravel\/pint": "^1.13",
        "laravel\/sail": "^1.26",
        "mockery\/mockery": "^1.6",
        "nunomaduro\/collision": "^8.0",
        "phpunit\/phpunit": "^11.0.1"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app\/",
            "Database\\Factories\\": "database\/factories\/",
            "Database\\Seeders\\": "database\/seeders\/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests\/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force",
            "php .\/public\/installer\/merge-composer.php"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi",
            "@php -r \"file_exists('database\/database.sqlite') || touch('database\/database.sqlite');\"",
            "@php artisan migrate --graceful --ansi"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp\/pest-plugin": true,
            "php-http\/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}